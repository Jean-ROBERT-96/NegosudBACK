<Window x:Class="NegoSUDBack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NegoSUDBack"
        mc:Ignorable="d"
        Title="Negosud : Gestion" Height="650" Width="1000" ResizeMode="CanMinimize" Icon="/ressources/icones/216316_pen_icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="900" MaxWidth="900">
            <TextBlock Text="Negosud : Gestion des stocks" VerticalAlignment="Center" DockPanel.Dock="Left"/>
            <Button x:Name="exitButton" Content="Quitter" Margin="10" DockPanel.Dock="Right" HorizontalAlignment="Right" Width="50" Click="exitButton_Click"/>
        </DockPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock x:Name="searchText" Text="Entrez votre recherche :" Margin="10, 0, 10, 0"/>
            <TextBox x:Name="searchBox" Width="300" Margin="10, 0, 10, 0"/>
            <Button x:Name="searchButton" Content="Rechercher" Margin="10, 0, 10, 0"/>
        </StackPanel>

            <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <!-- Body -->
            <StackPanel>
                <Button x:Name="addButton" Content="Ajouter un article" Tag="article" Margin="10" Click="addButton_Click"/>
                <ScrollViewer Height="500">
                    <StackPanel x:Name="scrollFrame"/>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Button x:Name="articleFrameButton" Content="Article" Height="50" Margin="10" Click="articleFrameButton_Click"/>
                <Button x:Name="familyFrameButton" Content="Famille" Height="50" Margin="10" Click="familyFrameButton_Click"/>
                <Button x:Name="clientFrameButton" Content="Client" Height="50" Margin="10"/>
                <Button x:Name="vendorFrameButton" Content="Fournisseur" Height="50" Margin="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
