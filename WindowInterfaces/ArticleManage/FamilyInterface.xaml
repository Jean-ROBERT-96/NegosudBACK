<Window x:Class="NegoSUDBack.WindowInterfaces.FamilyInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NegoSUDBack.WindowInterfaces"
        mc:Ignorable="d"
        Title="Negosud : Gestion des familles" Height="400" Width="500" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10">
            <TextBlock x:Name="familyBlock" Text="Family : nom" TextAlignment="Center" Margin="10"/>
            <TextBlock Text="Nom :" Margin="10"/>
            <TextBox x:Name="nameBox" Margin="10" IsReadOnly="True"/>
            <TextBlock Text="Description :" Margin="10"/>
            <TextBox x:Name="descriptionBlock" TextWrapping="Wrap" Margin="10" Height="140" IsReadOnly="True"/>
        </StackPanel>
        <DockPanel Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="closeButton" Content="Fermer" Margin="15" DockPanel.Dock="Left" Width="200"/>
            <Button x:Name="validButton" Content="Valider" Margin="15" DockPanel.Dock="Right" Width="200" Visibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>
